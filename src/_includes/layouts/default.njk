<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    {% include 'partials/css.njk' %}
    {% include 'partials/metadata.njk' %}
  </head>
  <body>
    <div class="drawer drawer-mobile">
      <input id="my-drawer-2" type="checkbox" class="drawer-toggle"/>
      <div class="drawer-content">
        <div class="w-full navbar bg-base lg:hidden">
          <div class="flex-none lg:hidden">
            <label for="my-drawer-2" class="btn btn-square btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </label>
          </div>
        </div>
        <!-- Page content here -->
        <div class="p-6 pb-16">
          <div class="flex flex-col-reverse justify-between gap-6 xl:flex-row">
            <div class="prose w-full max-w-4xl flex-grow">{{ content | safe }}</div>
          </div>
        </div>
      </div>
      <div class="drawer-side">
        <label for="my-drawer-2" class="drawer-overlay"></label>
        <ul class="menu p-4 overflow-y-auto w-80 bg-base-200 text-base-content">
          <li>
            <a href="/" aria-label="Homepage">
              <img
                src="/public/logo_dark_text.svg"
                alt="The Green Web Foundation typographic logo"
                class="max-h-full"
                height="210px"
                width="372px"/>
            </a>
          </li>
          <li class="menu-title">
            <p class="prose prose-lg">Libraries</p>
          </li>
          <!-- Sidebar content here -->
          {%- for main in collections.main -%}
            <li>
              <a class="prose prose-lg" href="{{ main.url }}">{{ main.data.libraryName }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </body>
</html>